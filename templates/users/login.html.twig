{% extends 'base_bis.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Style_Connexion.css') }}">
{% endblock %}


{% block body %}
    <div class="container">
            <div class="row justify-content-center align-items-center header">
                <h1>Bienvenue sur votre générateur de menus !</h1> 
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 d-sm-none d-md-block img-block">
                    <div class="row img-container justify-content-center align-items-center">
                        <a href="{{ path('home') }}"><img src="{{ asset('images/16113.png') }}" class="img-custom" alt="logo miam"></a>
                    </div>
                    
                </div>
                <div class="col-md-6 col-sm-12 form-block">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-6 form-container">
                            <form method="POST">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <p class="form-text">Connectez vous :</p>
                                <div class="form-group">
                                  <label for="email">Adresse mail : </label>
                                  <input type="email" class="form-control" id="email" name="email" placeholder="Veuillez entrer votre adresse mail" required>
                                </div>
                                <div class="form-group password-input">
                                  <label for="password">Mot de passe : </label>
                                  <input type="password" class="form-control" id="password" name="password" placeholder="Entrer votre mot de passe" required>
                                </div>
                                <div class="form-group register-link">
                                    <a href="{{ path('user_register') }}">Pas encore de compte ? Inscrivez vous ici</a>
                                </div>

                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary" >Connexion</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
{% endblock %}
